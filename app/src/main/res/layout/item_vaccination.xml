<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="horizontal"
    android:padding="12dp">

    <TextView
        android:id="@+id/textRecordId"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:text="1"
        android:textColor="#757575"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textAnimalId"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="A1"
        android:textColor="#212121"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textVaccine"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Rabies"
        android:textColor="#212121"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textDateGiven"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="01/01/24"
        android:textColor="#212121"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textNextDue"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="01/01/25"
        android:textColor="#212121"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textStatus"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="Completed"
        android:textColor="@color/livestock_green"
        android:textSize="12sp"
        android:textStyle="bold" />

</LinearLayout>
